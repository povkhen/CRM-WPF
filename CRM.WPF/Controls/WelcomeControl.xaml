<UserControl x:Class="CRM.WPF.WelcomeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:core="clr-namespace:CRM.CORE;assembly=CRM.CORE"
             xmlns:local="clr-namespace:CRM.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    <Grid DataContext="{x:Static core:WelcomeDesignModel.Instance}" Background="{StaticResource ForegroundLightBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>


        <TextBlock Grid.Row="0"
                   Text="Welcome"
                   FontSize="50"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Foreground="{StaticResource WordBlueBrush}"/>

        <StackPanel Grid.Row="1">
            <TextBlock 
                Text="{Binding UserName}"
                FontSize="30"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Margin="10 5 0 5"/>

            <TextBlock 
                Text="{Binding FullName}"
                FontSize="30"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Margin="10 5 0 5"/>
            
            <TextBlock 
                Text="{Binding Email}"
                FontSize="30"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Margin="10 5 0 5"/>

            <TextBlock 
                Text="{Binding Phone}"
                FontSize="30"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Margin="10 5 0 5"/>

            <Button Content="Logout"
                            Command="{Binding LogoutCommand}"
                            HorizontalAlignment="Center"/>


            <Button Content="Load Data"
                            Command="{Binding LoadCommand}"
                            HorizontalAlignment="Center"/>


            <Button Content="Clear Data"
                            Command="{Binding ClearCommand}"
                            HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
